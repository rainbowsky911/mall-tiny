<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.tiny.modules.pms.dao.PmsProductCategoryAttributeRelationDao">

    <resultMap type="com.macro.mall.tiny.modules.pms.entity.PmsProductCategoryAttributeRelation"
               id="PmsProductCategoryAttributeRelationMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productCategoryId" column="product_category_id" jdbcType="INTEGER"/>
        <result property="productAttributeId" column="product_attribute_id" jdbcType="INTEGER"/>
    </resultMap>


    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.pms_product_category_attribute_relation(product_category_id, product_attribute_id)
        values (#{productCategoryId}, #{productAttributeId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.pms_product_category_attribute_relation
        <set>
            <if test="productCategoryId != null">
                product_category_id = #{productCategoryId},
            </if>
            <if test="productAttributeId != null">
                product_attribute_id = #{productAttributeId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.pms_product_category_attribute_relation where id = #{id}
    </delete>

</mapper>