<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.tiny.modules.pms.dao.PmsProductOperateLogDao">

    <resultMap type="com.macro.mall.tiny.modules.pms.entity.PmsProductOperateLog" id="PmsProductOperateLogMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="priceOld" column="price_old" jdbcType="NUMERIC"/>
        <result property="priceNew" column="price_new" jdbcType="NUMERIC"/>
        <result property="salePriceOld" column="sale_price_old" jdbcType="NUMERIC"/>
        <result property="salePriceNew" column="sale_price_new" jdbcType="NUMERIC"/>
        <result property="giftPointOld" column="gift_point_old" jdbcType="INTEGER"/>
        <result property="giftPointNew" column="gift_point_new" jdbcType="INTEGER"/>
        <result property="usePointLimitOld" column="use_point_limit_old" jdbcType="INTEGER"/>
        <result property="usePointLimitNew" column="use_point_limit_new" jdbcType="INTEGER"/>
        <result property="operateMan" column="operate_man" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.pms_product_operate_log(product_id, price_old, price_new, sale_price_old, sale_price_new, gift_point_old, gift_point_new, use_point_limit_old, use_point_limit_new, operate_man, create_time)
        values (#{productId}, #{priceOld}, #{priceNew}, #{salePriceOld}, #{salePriceNew}, #{giftPointOld}, #{giftPointNew}, #{usePointLimitOld}, #{usePointLimitNew}, #{operateMan}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.pms_product_operate_log
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="priceOld != null">
                price_old = #{priceOld},
            </if>
            <if test="priceNew != null">
                price_new = #{priceNew},
            </if>
            <if test="salePriceOld != null">
                sale_price_old = #{salePriceOld},
            </if>
            <if test="salePriceNew != null">
                sale_price_new = #{salePriceNew},
            </if>
            <if test="giftPointOld != null">
                gift_point_old = #{giftPointOld},
            </if>
            <if test="giftPointNew != null">
                gift_point_new = #{giftPointNew},
            </if>
            <if test="usePointLimitOld != null">
                use_point_limit_old = #{usePointLimitOld},
            </if>
            <if test="usePointLimitNew != null">
                use_point_limit_new = #{usePointLimitNew},
            </if>
            <if test="operateMan != null and operateMan != ''">
                operate_man = #{operateMan},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.pms_product_operate_log where id = #{id}
    </delete>

</mapper>