<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.tiny.modules.pms.dao.PmsProductLadderDao">

    <resultMap type="com.macro.mall.tiny.modules.pms.entity.PmsProductLadder" id="PmsProductLadderMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="count" column="count" jdbcType="INTEGER"/>
        <result property="discount" column="discount" jdbcType="NUMERIC"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
    </resultMap>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.pms_product_ladder(product_id, count, discount, price)
        values (#{productId}, #{count}, #{discount}, #{price})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.pms_product_ladder
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="count != null">
                count = #{count},
            </if>
            <if test="discount != null">
                discount = #{discount},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.pms_product_ladder where id = #{id}
    </delete>

</mapper>