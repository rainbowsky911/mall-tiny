<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.tiny.modules.pms.dao.PmsFeightTemplateDao">

    <resultMap type="com.macro.mall.tiny.modules.pms.entity.PmsFeightTemplate" id="PmsFeightTemplateMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="chargeType" column="charge_type" jdbcType="INTEGER"/>
        <result property="firstWeight" column="first_weight" jdbcType="NUMERIC"/>
        <result property="firstFee" column="first_fee" jdbcType="NUMERIC"/>
        <result property="continueWeight" column="continue_weight" jdbcType="NUMERIC"/>
        <result property="continmeFee" column="continme_fee" jdbcType="NUMERIC"/>
        <result property="dest" column="dest" jdbcType="VARCHAR"/>
    </resultMap>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.pms_feight_template(name, charge_type, first_weight, first_fee, continue_weight, continme_fee, dest)
        values (#{name}, #{chargeType}, #{firstWeight}, #{firstFee}, #{continueWeight}, #{continmeFee}, #{dest})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.pms_feight_template
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="chargeType != null">
                charge_type = #{chargeType},
            </if>
            <if test="firstWeight != null">
                first_weight = #{firstWeight},
            </if>
            <if test="firstFee != null">
                first_fee = #{firstFee},
            </if>
            <if test="continueWeight != null">
                continue_weight = #{continueWeight},
            </if>
            <if test="continmeFee != null">
                continme_fee = #{continmeFee},
            </if>
            <if test="dest != null and dest != ''">
                dest = #{dest},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.pms_feight_template where id = #{id}
    </delete>

</mapper>