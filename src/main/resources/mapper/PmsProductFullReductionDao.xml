<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.tiny.modules.pms.dao.PmsProductFullReductionDao">

    <resultMap type="com.macro.mall.tiny.modules.pms.entity.PmsProductFullReduction" id="PmsProductFullReductionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="fullPrice" column="full_price" jdbcType="NUMERIC"/>
        <result property="reducePrice" column="reduce_price" jdbcType="NUMERIC"/>
    </resultMap>


    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.pms_product_full_reduction(product_id, full_price, reduce_price)
        values (#{productId}, #{fullPrice}, #{reducePrice})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.pms_product_full_reduction
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="fullPrice != null">
                full_price = #{fullPrice},
            </if>
            <if test="reducePrice != null">
                reduce_price = #{reducePrice},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.pms_product_full_reduction where id = #{id}
    </delete>

</mapper>