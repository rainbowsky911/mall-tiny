<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macro.mall.tiny.modules.pms.dao.PmsMemberPriceDao">

    <resultMap type="com.macro.mall.tiny.modules.pms.entity.PmsMemberPrice" id="PmsMemberPriceMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="productId" column="product_id" jdbcType="INTEGER"/>
        <result property="memberLevelId" column="member_level_id" jdbcType="INTEGER"/>
        <result property="memberPrice" column="member_price" jdbcType="NUMERIC"/>
        <result property="memberLevelName" column="member_level_name" jdbcType="VARCHAR"/>
    </resultMap>



    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.pms_member_price(product_id, member_level_id, member_price, member_level_name)
        values (#{productId}, #{memberLevelId}, #{memberPrice}, #{memberLevelName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.pms_member_price
        <set>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="memberLevelId != null">
                member_level_id = #{memberLevelId},
            </if>
            <if test="memberPrice != null">
                member_price = #{memberPrice},
            </if>
            <if test="memberLevelName != null and memberLevelName != ''">
                member_level_name = #{memberLevelName},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.pms_member_price where id = #{id}
    </delete>

</mapper>